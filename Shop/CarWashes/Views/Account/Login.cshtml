@model ViewModels.IdentityViewModels.LoginViewModel

@{
    Layout = "~/Views/Admin/_AdminLayoutPage.cshtml";
}

<div class="row">
    <div style="margin-top:10%" class="col s4 offset-s4">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "red-text text-darken-1" })

                    <div class="input-field col s12">
                        <i class="medium material-icons prefix">account_circle</i>
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "validate" } })
                        @Html.LabelFor(model => model.Login)
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "red-text text-darken-1" })
                    </div>

                    <div class="input-field col s12">
                        <i class="medium material-icons prefix">vpn_key</i>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "validate", @type = "password" } })
                        @Html.LabelFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "red-text text-darken-1" })
                    </div>

                    <input type="submit" value="Log in" class="btn col s5 offset-s4" />
                </div>
        }
    </div>
</div>

