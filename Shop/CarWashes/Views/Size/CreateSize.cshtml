@model ViewModels.SizeViewModel

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "red-text text-darken-1" })
        <div class="input-field col s5">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "validate" } })
            @Html.LabelFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text text-darken-1" })
        </div>
        <br />
        <input type="submit" value="Create" class="btn" id="create_size_button" />
    }
</div>
