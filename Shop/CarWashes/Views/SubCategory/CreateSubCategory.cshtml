@model ViewModels.SubCategoryViewModel

<div class="row">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "red-text text-darken-1" })

    @Html.Action("GetDropDownListOfAllCategories", "Category")

    <div class="input-field col s12">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "validate", id = "subCategoryName" } })
        @Html.LabelFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "red-text text-darken-1" })
    </div>
        <br />
        <input type="submit" value="Create" class="btn" id="create_subCategory_button" />
}
</div>
